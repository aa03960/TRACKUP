<h2 style="color: white;">Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :email, class:"form-colour" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder: "Enter your email for the account" %>
  </div>
<br>
  <div class="actions button">
    <%= f.submit "Send password reset instructions", class:"btn btn-danger" %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
