<%= form_for @contact, url: contacts_index_path do |f| %>
  <div class = "field form-group actions button">
    <%= f.text_field  :name, required: true, class: "form-control", placeholder: "Full Name" %><br>
    <%= f.text_field :email, required: true, class: "form-control", placeholder: "E-mail Address" %><br>
    <%= f.text_area :message,
                    rows: 8,
                    cols: 40,
                    required: true,
                    class: "form-control",
                    placeholder: "Comment"%><br>
    <%= f.submit 'Send Message', class: 'btn btn-danger'%>
  </div>
<% end %>